{
  "name": "ussd-data-manager",
  "description": "A comprehensive React-based application for managing USSD service data across multiple telecommunication networks with role-based access control and real-time API integration.",
  "version": "2.0.0",
  "type": "module",
  "keywords": ["ussd", "telecom", "ghana", "mcp", "api", "react", "data-management"],
  "author": "USSD Ninjas",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "server": "node server.js",
    "server:secure": "node server_secure.js",
    "server:readonly": "node server_readonly.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:secure": "concurrently \"npm run server:secure\" \"npm run dev\"",
    "dev:readonly": "concurrently \"npm run server:readonly\" \"npm run dev\"",
    "test:api": "node test_api.js"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "clsx": "^2.1.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.6.2",
    "vite": "^5.4.8",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "node-fetch": "^3.3.2"
  }
}